<div class="container">
  <div class="card-deck justify-content-center">
    <% @articles.each do |article| %>
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
          <% if article.user %>
            by <span class="text-success"><%= "[Admin] " if article.user.admin? %></span><%= link_to article.user.username, user_path(article.user) %>
          <% end %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
          <p class="card-text"><%= truncate(article.description, length: 100) %></p>
          <%= link_to "View", article_path(article), class: "btn btn-outline-success" %>
          <% if logged_in? && (article.user == current_user || current_user.admin?) %>
            <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-info" %>
            <%= link_to "Delete", article_path(article), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
          <% end %>
        </div>
        <div class="card-footer text-muted">
          <small>Created ago <%= time_ago_in_words(article.created_at) %>,
          edited ago <%= time_ago_in_words(article.updated_at) %></small>
        </div>
      </div>
    <% end %>
  </div>
</div>

