<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>

<%= gravatar_for @user, size: 200 %>

<% if logged_in? && @user == current_user %>
  <div class="text-center mt-4">
    <%= link_to "Enter profile", edit_user_path(@user), class: "btn btn-outline-info" %>
  </div>
<% end %>

<h3 class="text-center mt-4">Articles</h3>

<% if @user.articles.count <= 0 %>
  <div class="text-center mt-4">This user hasn't created any articles</div>
<% end %>

<div class="apple_pagination">
  <%= will_paginate @articles, :container => false %>
</div>

<%= render "articles/article" %>

<div class="apple_pagination mb-4">
  <%= will_paginate @articles, :container => false %>
</div>